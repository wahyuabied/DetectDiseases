<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mrabid.detectdiseases">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission. ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".UI.Detect.DetectActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".UI.GraphActivity"
            android:launchMode="singleTop"
            android:screenOrientation="landscape" />
        <activity
            android:name=".DetectTomatoActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".UI.Penyakit.PenyakitActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".UI.Penyakit.DetailPenyakitActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".UI.Pestisida.PestisidaActivity"
            android:launchMode="singleTop" />
        <activity android:name=".UI.Pestisida.ListPestisidaActivity"></activity>
    </application>

</manifest>