<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.Pestisida.PestisidaActivity">

    <android.support.v7.widget.Toolbar
        app:contentInsetStart="0dp"
        android:id="@+id/toolbar"
        android:elevation="@dimen/_5sdp"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">
        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/img_back"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_arrow_back"/>

            <TextView
                android:id="@+id/tv_judul_pestisidaActivity"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_toRightOf="@+id/img_back"
                android:layout_width="wrap_content"
                android:text="Pestisida"
                android:textColor="#fff"
                android:textSize="12pt"
                android:layout_height="@dimen/_30sdp" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <WebView
        android:layout_marginTop="-200dp"
        android:id="@+id/wv_pestisidaActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/btn_buy_pestisidaActivity"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:text="Beli Pestisida"
        android:textColor="#fff"
        android:textSize="9pt"
        android:backgroundTint="@color/colorAccent"
        android:layout_height="@dimen/_50sdp" />

</RelativeLayout>