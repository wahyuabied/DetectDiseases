<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Fragment.SolutionFragment">

        <TextView
            android:id="@+id/tv_penyakit"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="10pt"
            android:layout_margin="@dimen/_10sdp"
            android:text="Penyakit" />

        <LinearLayout
            android:paddingLeft="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_width="@dimen/_280sdp"
                        android:textSize="8pt"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:text="Bahan Alami"/>
                </TableRow>
                <TableRow>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_alami_fragmentSolution"
                        android:layout_marginLeft="@dimen/_20sdp">

                    </android.support.v7.widget.RecyclerView>
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_width="@dimen/_280sdp"
                        android:textSize="8pt"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:text="Bahan Kimia"/>
                </TableRow>
                <TableRow>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_kimia_fragmentSolution"
                        android:layout_marginLeft="@dimen/_20sdp">

                    </android.support.v7.widget.RecyclerView>
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>